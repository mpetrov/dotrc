startup_message off

shell /bin/zsh
startup_message off
autodetach      on
vbell           on

setenv LC_CTYPE en_GB.UTF-8
defutf8 on

termcapinfo rxvt-unicode ti@:te@
terminfo    rxvt-unicode ti@:te@:
term        screen-256color

hardstatus on
hardstatus alwayslastline '%{= G} %H%{= G} %= %{= w}%-w%{+b r}%n*%t%{-b r}%{w}%+w %= %{c}%d %D %c '

termcapinfo xterm-color|xterm|xterms|xs|rxvt|xterm-256color ti@:te@

screen -t ZSH 0 zsh
